<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_routs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.routes.RoutsActivity">

    <TextView
        android:text="@string/routes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_categoryName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView_routes"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_routes"
        android:layout_above="@+id/button_addRoute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/ListView_Routes"
        android:maxHeight="50dp" />

    <Button
        android:text="Show Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_routes_showData"
        android:layout_alignParentEnd="true"
        android:textSize="10sp"
        android:layout_below="@+id/ListView_Routes" />

    <Button
        android:text="Delete Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_routes_deleteAll"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_categoryName"
        android:textSize="24sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center" />

    <Button
        android:text="Add Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_addRoute"
        android:layout_alignBaseline="@+id/button_routes_deleteAll"
        android:layout_alignBottom="@+id/button_routes_deleteAll"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
